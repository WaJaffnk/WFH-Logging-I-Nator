{
    "appenders": {
        "console": {
            "type": "console"
        },
        "file": {
            "type": "file",
            "filename": "logs/app.log",
            "maxLogSize": 10485760, 
            "backups": 3,
            "compress": true
        },
        "app": {
            "type": "file",
            "filename": "logs/app.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "errorFile": {
            "type": "file",
            "filename": "logs/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "errorFile"
        }
    },
    "categories": {
        "default": { "appenders": [ "console", "file", "app", "errors" ], "level": "info" }        
    }
}